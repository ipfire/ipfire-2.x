###############################################################################
# Definitions
###############################################################################

include Config

VER = 1.0

THISAPP    = fake-environ
DIR_APP    = $(DIR_SRC)/$(THISAPP)
TARGET     = $(DIR_INFO)/$(THISAPP)-tools

###############################################################################
# Top-level Rules
###############################################################################

install : $(TARGET)

check :

download :

b2 :

###############################################################################
# Installation Details
###############################################################################

$(TARGET) :
	@$(PREBUILD)
	@rm -rf $(DIR_APP)
	cp -rvf $(DIR_SRC)/src/$(THISAPP) $(DIR_APP)

	cd $(DIR_APP) && make install CFLAGS="$(CFLAGS)" \
		TOOLS_DIR="$(TOOLS_DIR)"

	@rm -rf $(DIR_APP)
	@$(POSTBUILD)
