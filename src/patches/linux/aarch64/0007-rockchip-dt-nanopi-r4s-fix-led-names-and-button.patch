From eac0f018dcc9af3ecdb21822927ab4ab479d2ab8 Mon Sep 17 00:00:00 2001
From: Arne Fitzenreiter <arne_f@ipfire.org>
Date: Mon, 8 Dec 2025 14:32:58 +0100
Subject: [PATCH 7/8] rockchip: dt: nanopi-r4s: fix led names and button

Signed-off-by: Arne Fitzenreiter <arne_f@ipfire.org>
---
 arch/arm64/boot/dts/rockchip/rk3399-nanopi-r4s.dtsi | 11 ++++++-----
 1 file changed, 6 insertions(+), 5 deletions(-)

diff --git a/arch/arm64/boot/dts/rockchip/rk3399-nanopi-r4s.dtsi b/arch/arm64/boot/dts/rockchip/rk3399-nanopi-r4s.dtsi
index 8d94d9f91a5c..24e8a17da49e 100644
--- a/arch/arm64/boot/dts/rockchip/rk3399-nanopi-r4s.dtsi
+++ b/arch/arm64/boot/dts/rockchip/rk3399-nanopi-r4s.dtsi
@@ -26,18 +26,19 @@ gpio-leds {
 
 		lan_led: led-lan {
 			gpios = <&gpio1 RK_PA1 GPIO_ACTIVE_HIGH>;
-			label = "green:lan";
+			label = "nanopi-r4s:green:lan";
 		};
 
 		sys_led: led-sys {
 			gpios = <&gpio0 RK_PB5 GPIO_ACTIVE_HIGH>;
-			label = "red:power";
+			label = "nanopi-r4s:green:power";
 			default-state = "on";
+			linux,default-trigger = "heartbeat";
 		};
 
 		wan_led: led-wan {
 			gpios = <&gpio1 RK_PA0 GPIO_ACTIVE_HIGH>;
-			label = "green:wan";
+			label = "nanopi-r4s:green:wan";
 		};
 	};
 
@@ -49,8 +50,8 @@ gpio-keys {
 		key-reset {
 			debounce-interval = <50>;
 			gpios = <&gpio1 RK_PC6 GPIO_ACTIVE_LOW>;
-			label = "reset";
-			linux,code = <KEY_RESTART>;
+			label = "power";
+			linux,code = <KEY_POWER>;
 		};
 	};
 
